<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"

	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd        
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="org.ldv.sio.slam.lights" />

	<bean class="org.ldv.sio.slam.lights.impl.AmpouleLed" id="led" scope="prototype" />
	<bean class="org.ldv.sio.slam.lights.impl.AmpouleIncandescente" id="incand" scope="prototype" />
	<bean class="org.ldv.sio.slam.lights.impl.AmpouleTube" id="tube" scope="prototype" />

	<bean class="org.ldv.sio.slam.lights.App" id="main" >
	  <property name="eclairage" ref="led"/>
	</bean>

</beans>